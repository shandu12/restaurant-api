{
   "compilerOptions": {
      "rootDir": "src",
      "outDir": "build",
      "noImplicitAny": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declaration": true,
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true
   },
   "include": [
      "src/*/"
   ],
   "exclude": [
      "node_modules/**"
   ]
}